<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="FileAppender" fileName="target/logs/app.log" append="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="application.console.ConsoleApplication" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="configuration.ConnectionPool" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="controller.Command" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="controller.commands.HomeCommand" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="controller.commands.RacesCommand" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="controller.commands.BetsCommand" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="controller.commands.AboutCommand" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="controller.commands.SigInCommand" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="controller.commands.SignUpCommand" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="filters.UserSessionFilter" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="filters.RegistrationFilter" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="models.daos.AdminDAO" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="models.daos.BetDAO" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="models.daos.ClientDAO" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="models.daos.AuthDAO" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="models.daos.HorseDAO" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="models.daos.RaceDAO" level="debug">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>